
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Homemate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-abcdefghijklmnopqrstuvwxyz1234567890" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" type="text/css" href="~/CSS/navbar.css" />
    <style>
        /* Add the following CSS to reset the margin on the body element */
        .navbar {
            min-height: 60px;
            background-color: #053559;
            color: white;
        }

        .navbar-brand {
            padding: 15px 0;
            height: auto;
            font-weight: bold;
        }
        /* Add custom CSS to style the buttons in the navbar */
        .btn-navbar {
            padding-top: 5px;
            padding-right: 5px;
            color: white;
            font-size: 20px;
        }

        .left-section {
            position: fixed;
            width: 300px;
            overflow-y: scroll;
            top: 0;
            bottom: 0;
            margin-left: -30px;
        }

        .right-section {
            margin-left: 255px; /* Adjust the margin to account for the width of the left section */
            overflow-x: hidden;
            width: fit-content;
        }

        .btn-hover {
            background-color: transparent;
            transition: all 0.3s;
            border-width: 0px 0px 1px 0px;
            border-radius: 10px;
            border-style: solid;
        }

            .btn-hover:hover {
                background-color: #709e93; /* Change the background color on hover */
            }

        .cat {
            width: 150px;
            color: white;
            background-color: transparent;
            border-color: white;
            border-width: 0;
            border-radius: 10px;
            border-style: solid;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="color:black">
        <div class="container-fluid" style="margin-left:10px; margin-right:10px;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Homemate", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:white">Products <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Furniture", "Category1", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Home Decoration", "Category2", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Kitchen & Dining", "Category3", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Bed & Bath", "Category4", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Appliences", "Category5", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Home Improvement", "Category6", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Outdoor & Garden", "Category7", "Home", new { area = "" }, new { })</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:white">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Home Cleaning", "Service1", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Maintanance & Repairs", "Service2", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Home Security", "Service3", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Home Improvement", "Service4", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Pest Control", "Service5", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Interior Designing & Styling", "Service6", "Home", new { area = "" }, new { })</li>
                            <li>@Html.ActionLink("Moving & Packaging", "Service2", "Home", new { area = "" }, new { })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @style = "color:white;" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.Cookies["CustomerUsername"] != null)
                    {
                        <li style="color:white; font-size:20px; text-align:center; margin-top:13px; margin-right:5px;">@Request.Cookies["CustomerUsername"].Value</li>
                    }
                    @if (Request.Cookies["CustomerEmail"] == null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink("Login", "Login", "UserAccount", new { area = "" }, new { @class = "btn btn-primary navbtn", @style = "color:white;" })
                        </li>
                    }
                    @if (Request.Cookies["CustomerEmail"] == null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink("Register", "RegisterUser", "UserAccount", new { area = "" }, new { @class = "btn btn-info navbtn", @style = "color:white;" })
                        </li>
                    }
                    <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                        @Html.ActionLink(" ", "Cart", "UserAccount", new { area = "" }, new { @class = "btn btn-success glyphicon glyphicon-shopping-cart navbtn", @style = "color:white;" })
                    </li>
                    <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                        @Html.ActionLink(" ", "EditProfile", "UserAccount", new { area = "" }, new { @class = "btn btn-warning glyphicon glyphicon-user navbtn", @style = "color:white;" })
                    </li>
                    @if (Request.Cookies["CustomerEmail"] != null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink(" ", "Logout", "UserAccount", new { area = "" }, new { @class = "btn btn-danger glyphicon glyphicon-off navbtn", @style = "color:white;" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>



    <div class="container-fluid center-container body-content">
        @RenderBody()
     </div>
    <footer class="bg-dark text-light py-4">
        <div class="center-container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2023 Housemate. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
