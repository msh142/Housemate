
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Homemate</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-abcdefghijklmnopqrstuvwxyz1234567890" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" type="text/css" href="~/CSS/navbar.css" />
    <style>
        /* Add the following CSS to reset the margin on the body element */
        .navbar {
            min-height: 60px;
            background-color: #053559;
            color: white;
        }

        .navbar-brand {
            padding: 15px 0;
            height: auto;
            font-weight: bold;
        }
        /* Add custom CSS to style the buttons in the navbar */
        .btn-navbar {
            padding-top: 5px;
            padding-right: 5px;
            color: white;
            font-size: 20px;
        }

        .left-section {
            position: fixed;
            width: 300px;
            overflow-y: scroll;
            top: 0;
            bottom: 0;
            margin-left: -30px;
        }

        .right-section {
            margin-left: 255px; /* Adjust the margin to account for the width of the left section */
            overflow-x: hidden;
            width: 1195px;
        }

        .btn-hover {
            background-color: transparent;
            transition: all 0.3s;
            border-width: 0px 0px 1px 0px;
            border-radius: 10px;
            border-style: solid;
        }

            .btn-hover:hover {
                background-color: #709e93; /* Change the background color on hover */
            }

        .cat {
            width: 150px;
            color: white;
            background-color: transparent;
            border-color: white;
            border-width: 0;
            border-radius: 10px;
            border-style: solid;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="color:black">
        <div class="container-fluid" style="margin-left:10px; margin-right:10px;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Homemate", "Dashboard", "Admins", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Dashboard", "Dashboard", "Admins", new { area = "" }, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @style = "color:white;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @style = "color:white;" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.Cookies["AdminUsername"] != null)
                    {
                        <li style="color:white; font-size:20px; text-align:center; margin-top:13px; margin-right:5px;">@Request.Cookies["AdminUsername"].Value</li>
                    }
                    @if (Request.Cookies["AdminUsername"] != null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink("Add New Admin", "Create", "Admins", new { area = "" }, new { @class = "btn btn-info navbtn", @style = "color:white;" })
                        </li>
                    }
                    @if (Request.Cookies["AdminUsername"] != null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink("View Admins", "Index","Admins", new { @class = "btn btn-success navbtn", @style = "color:white;" })
                        </li>
                    }
                    @if (Request.Cookies["AdminUsername"] != null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink(" ", "Edit", new { id = int.Parse(Request.Cookies["AdminID"].Value) }, new { @class = "btn btn-warning glyphicon glyphicon-user navbtn", @style = "color:white;" })
                        </li>
                    }

                    @if (Request.Cookies["AdminUsername"] != null)
                    {
                        <li style="padding-top: 5px; padding-right: 5px;" class="text-white">
                            @Html.ActionLink(" ", "Logout", "Admins", new { area = "" }, new { @class = "btn btn-danger glyphicon glyphicon-off navbtn", @style = "color:white;" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>



    <div class="container-fluid center-container body-content">
        <div class="row">
            <!-- Left Section: 3/4 -->
            <div class="col-md-3 left-section  d-flex align-items-center justify-content-center" style="margin-top: 60px; background-color: #418171; ">
                <div style="max-width: 500px; height: 100%; margin-bottom: inherit;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" style="background-color: #418171; border: 0px;">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 22px; margin-left: 20px;margin-top:20px; color: white">Product Management</h4>
                            <ul style="margin-top: 20px; background-color: #418171; ">
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Add", "Create", "Products", new { area = "" },  new { @class = "btn navbtn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("View", "Index", "Products", new { area = "" }, new { @class = "btn navbtn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Update", "Index", "Products", new { area = "" }, new { @class = "btn navbtn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Remove", "Index", "Products", new { area = "" }, new { @class = "btn navbtn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                            </ul>
                        </li>
                        <li class="list-group-item" style="background-color: #418171; border: 0px ">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 22px; margin-left: 20px; color: white">Order Management</h4>
                            <ul style="margin-top: 20px; background-color: #418171; ">
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Pending Orders", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Confirmed Orders", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Rejected Orders", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("All Orders", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                            </ul>
                        </li>
                        <li class="list-group-item" style="background-color: #418171; border: 0px ">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 22px; margin-left: 20px; color: white">User Management</h4>
                            <ul style="margin-top: 20px; background-color: #418171; ">
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("All Users", "Index", "UserAccount", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Send Notification", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Restricted users", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Banned users", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                            </ul>
                        </li>
                        <li class="list-group-item" style="background-color: #418171; border: 0px ">
                            <h4 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-size: 22px; margin-left: 20px; color: white">Others</h4>
                            <ul style="margin-top: 20px; background-color: #418171; ">
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Reports", "Index", "Reports", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                                <li class="list-group-item btn-hover">
                                    @Html.ActionLink("Reviews", "Index", "Admins", new { area = "" }, new { @class = "btn", @style = "color:white; text-align: left; width: 150px" })
                                </li>
                            </ul>
                        </li>
                        

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 right-section" style="padding-top:20px">
            @RenderBody()
            <hr />
            <footer class="bg-dark text-light py-4">
                <hr />
                <div class="center-container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <p>&copy; 2023 Housemate. All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
