@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Cart</title>
    <style>
        .product-row {
            border-bottom: 1px solid #dee2e6;
            padding: 10px 0;
        }

        .product-image {
            width: 100px;
            height: auto;
        }

        .product-name {
            font-weight: bold;
        }

        .product-price {
            color: #17a2b8;
        }

        .product-quantity {
            width: 70px;
        }

        .total-row {
            font-weight: bold;
            padding: 10px 0;
        }
        body {
            background-color: cadetblue;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Cart</h2>

        <div class="row product-row">
            <div class="col-md-2">
                <img src="~/img/products/product1.jpg" alt="" class="product-image">
            </div>
            <div class="col-md-4">
                <p class="product-name">Moon Shape Wallpiece</p>
                <p class="product-price">$19.99</p>
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control product-quantity" value="1">
            </div>
            <div class="col-md-2">
                <p class="product-price">$19.99</p>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-danger">Remove</button>
            </div>
        </div>

        <div class="row product-row">
            <div class="col-md-2">
                <img src="~/img/products/product2.jpg" alt="Product 2" class="product-image">
            </div>
            <div class="col-md-4">
                <p class="product-name">Designed Sofa Cusion</p>
                <p class="product-price">$24.99</p>
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control product-quantity" value="2">
            </div>
            <div class="col-md-2">
                <p class="product-price">$49.98</p>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-danger">Remove</button>
            </div>
        </div>
        <div class="row product-row">
            <div class="col-md-2">
                <img src="~/img/products/product3.png" alt="Product 3" class="product-image">
            </div>
            <div class="col-md-4">
                <p class="product-name">Antique Designed Wooden Framed Mirror</p>
                <p class="product-price">$24.99</p>
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control product-quantity" value="2">
            </div>
            <div class="col-md-2">
                <p class="product-price">$49.98</p>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-danger">Remove</button>
            </div>
        </div>

        <div class="row total-row">
            <div class="col-md-9 text-right">
                <p>Total:</p>
            </div>
            <div class="col-md-2">
                <p>$69.97</p>
            </div>
            <div class="col-md-1"></div>
        </div>

        <div class="text-right">
            <button type="button" class="btn btn-primary">Checkout</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</body>
</html>

