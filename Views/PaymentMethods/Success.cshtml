@{
    ViewBag.Title = "Loading Page";
    Layout = null; // No layout for this view
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Loading Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f7f7f7;
            padding: 100px 0;
        }

        .loading-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 9999;
        }

        .loading-gif {
            width: 90%;
            height: 90%;
        }
        loading-text {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: white;
            font-size: 18px;
            z-index: 10000;
        }
    </style>
</head>
<body>
    <div class="loading-container">
        <img src="~/img/checkmark.gif" alt="Loading GIF" class="loading-gif">
        <div class="loading-text">
            Success! Redirecting...
        </div>
    </div>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("CustomerView", "Orders")';
        }, 3000); // 3 seconds delay
    </script>
</body>
</html>
