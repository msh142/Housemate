@model IEnumerable<Housemate.Models.Order>

@{
    ViewBag.Title = "Index";
    if (Request.Cookies["AdminID"] != null)
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else if (Request.Cookies["CustomerID"] != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<div style="margin-top:30px">

</div>
@if (Request.Cookies["CustomerID"] != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.order_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_date)
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.feedback)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_date)
                    </td>
                    <td>
                        @Html.ActionLink("Cancel Order", "CancelOrder","Orders", new { id = item.order_id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }

    </table>
}
@if (Request.Cookies["AdminID"] != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.order_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.customer_id)
            </th>
            <th></th>
        </tr>
        @if (Model != null)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.feedback)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer_id)
                    </td>
                    <td>
                        @Html.ActionLink("Proceed", "Details", new { id = item.order_id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.order_id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }

    </table>
}
