@model Housemate.Models.Product

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Add New Product</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
