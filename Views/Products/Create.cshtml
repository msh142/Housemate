                <input type="file" name="ImageFile" id="ImageFile" required />
                @Html.ValidationMessageFor(model => model.image_data, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
